<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightSteelBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkSlateBlue"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:titleTextColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/toolbar_title"
                    android:textColor="@color/White"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/toolbarPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_border_outer_black_24dp"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:id="@+id/toolbar_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/notification"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:id="@+id/toolbar_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/logout"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UnknownIdInLayout">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="4dp"
                    tools:ignore="ScrollViewSize,UnknownIdInLayout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:padding="12dp"
                        tools:ignore="UnknownIdInLayout">

                        <com.synnapps.carouselview.CarouselView
                            android:id="@+id/carousel"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            app:indicatorGravity="bottom|center"
                            app:indicatorMarginHorizontal="@dimen/margin_padding_size_large" />


                        <LinearLayout
                            android:id="@+id/layoutHeaderButton2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layoutHeaderIcon01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:weightSum="2">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btnKunjungan"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="4dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/custom_ripple"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:contentDescription="@string/todo"
                                            app:srcCompat="@drawable/kunjungan"
                                            tools:ignore="TooDeepLayout" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btnSPG"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="4dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/custom_ripple"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@drawable/spg"
                                            tools:ignore="ContentDescription" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btnPiutang"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:visibility="visible"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="4dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/custom_ripple"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="24dp"
                                            app:srcCompat="@drawable/piutang"
                                            tools:ignore="ContentDescription" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutHeaderTitle01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/kunjungan"
                                    android:textColor="@color/Black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/spg"
                                    android:textColor="@color/Black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvPiutang"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="PIUTANG"
                                    android:textColor="@color/Black"
                                    android:textSize="12sp"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutHeaderButton1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layoutHeaderIcon02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:weightSum="3">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btnPenjualan"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="4dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/custom_ripple"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:contentDescription="@string/todo"
                                            app:srcCompat="@drawable/penjualan"
                                            tools:ignore="TooDeepLayout" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btnCheck"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="4dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/custom_ripple"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="16dp">

                                        <ImageView
                                            android:id="@+id/imgCheck"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@drawable/checkin"
                                            tools:ignore="ContentDescription" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btnStock"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="4dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/custom_ripple"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@drawable/stockopname"
                                            tools:ignore="ContentDescription" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutHeaderTitle02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <TextView
                                    android:id="@+id/tvPenjualan"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="INPUT PENJUALAN"
                                    android:textColor="@color/Black"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tvCheck"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="CHECK IN/OUT"
                                    android:textColor="@color/Black"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="STOCK OPNAME"
                                    android:textColor="@color/Black"
                                    android:textSize="12sp"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            tools:ignore="DisableBaselineAlignment">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/checklist"
                                    android:textColor="@color/DarkSlateBlue"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvDateChecklist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"
                                    android:textColor="@color/DarkSlateBlue"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/btnTambah"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:background="@drawable/btn_rounded_blackyellow"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:text="@string/tambah"
                                    android:textColor="@color/White"
                                    android:textSize="11sp"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:id="@+id/tvNoData"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Tidak ada data"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="@dimen/d_13"
                            android:background="@drawable/btn_rounded_blackyellow"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/submit"
                            android:textColor="@color/White"
                            android:textSize="11sp"
                            tools:ignore="SmallSp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </ScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</FrameLayout>