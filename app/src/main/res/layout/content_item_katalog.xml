<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewKatalog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="1"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_ripple"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgKatalog"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/jeans"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvNamaKatalog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="8dp"
                android:text="CELANA JEANS"
                android:textColor="@color/DarkSlateBlue"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:gravity="right"
                android:text="2 PCS"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvKode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingBottom="2dp"
            android:text="680123"
            android:textSize="11sp"
            tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />


    </LinearLayout>

</android.support.v7.widget.CardView>
