<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayoutInputHarian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/LightSteelBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkSlateBlue"
            android:minHeight="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:ignore="RtlSymmetry,UseCompoundDrawables">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginStart="6dp"
                    android:gravity="center_vertical"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:text="INPUT HARIAN"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/toolbar_mutasi"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginEnd="12dp"
                    app:srcCompat="@drawable/ic_assignment_black_24dp"
                    android:contentDescription="@string/todo"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/layoutTabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/tabSalesReport"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/sales_report"
                    android:gravity="center"
                    android:textColor="@color/DarkSlateBlue"
                    android:textStyle="bold"
                    android:layout_weight="3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/DarkSlateBlue"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tabPenjualan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/penjualan_kompetitor"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#AB92F0"
                    android:layout_weight="3"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/DarkSlateBlue"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layoutTabBar"
            tools:ignore="UnknownIdInLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgBarang"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/jeans"
                            android:contentDescription="@string/todo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            tools:ignore="UseCompoundDrawables">

                            <TextView
                                android:id="@+id/tvNamaBarang"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:text="@string/jeans_blue"
                                android:textColor="@color/Black"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                tools:ignore="TooDeepLayout" />

                            <ImageView
                                android:id="@+id/btnMore"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="6dp"
                                app:srcCompat="@drawable/ic_more_vert_black_24dp"
                                android:contentDescription="@string/todo" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/harga"
                                android:textColor="@color/Black"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/tvHarga"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:text="Rp. 250.000"
                                android:textColor="@color/DarkSlateBlue"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/diskon"
                                android:textColor="@color/Black"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/tvDiskon"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:text="Rp. 50.000"
                                android:textColor="@color/DarkSlateBlue"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Qty"
                                android:textColor="@color/Black"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:id="@+id/tvQty"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:text="1 pcs"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Total"
                                android:textColor="@color/Black"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:id="@+id/tvTotal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:text="Rp. 200.000"
                                android:textColor="@color/DarkSlateBlue"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>