<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:weightSum="2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@drawable/background_input_kunjungan">

        <ImageView
            android:id="@+id/imgPengeluaran"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/jeans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="2"
        android:background="@drawable/background_input_kunjungan"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvTipePengeluaran"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="TRANSPORT"
            android:textSize="13sp"
            tools:ignore="HardcodedText,NestedWeights" />

        <TextView
            android:id="@+id/tvNominal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="16dp"
            android:text="200.000"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnImgMore"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@drawable/background_input_kunjungan">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_more_vert_black_32dp" />

    </LinearLayout>

</LinearLayout>