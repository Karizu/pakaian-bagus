<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightSteelBlue"
    tools:context=".presentation.home.photocounter.PhotoCounterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkSlateBlue"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:titleTextColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:weightSum="2"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:id="@+id/toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_keyboard_backspace_white_24dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:maxLength="25"
                android:maxLines="1"
                android:text="FOTO COUNTER"
                android:textColor="@color/White"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <!--<ImageView-->
            <!--android:id="@+id/toolbarPhoto"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginEnd="16dp"-->
            <!--app:srcCompat="@drawable/ic_border_outer_black_24dp"-->
            <!--android:contentDescription="@string/todo"-->
            <!--tools:ignore="RtlHardcoded" />-->

            <!--<ImageView-->
            <!--android:id="@+id/toolbar_notif"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginEnd="16dp"-->
            <!--app:srcCompat="@drawable/notification"-->
            <!--android:contentDescription="@string/todo"-->
            <!--tools:ignore="RtlHardcoded" />-->

            <!--<ImageView-->
            <!--android:id="@+id/toolbar_logout"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginEnd="12dp"-->
            <!--app:srcCompat="@drawable/logout"-->
            <!--android:contentDescription="@string/todo"-->
            <!--tools:ignore="RtlHardcoded" />-->

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!--<LinearLayout-->
            <!--android:id="@+id/layout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_above="@+id/btnAmbilPhoto"-->
            <!--android:gravity="center"-->
            <!--android:paddingStart="8dp"-->
            <!--android:paddingEnd="8dp">-->

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="300dp"-->
                <!--android:scaleType="center"-->
                <!--app:srcCompat="@drawable/ic_center_focus_weak_black_24dp"/>-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/layoutPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnAmbilPhoto"
            android:visibility="gone"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:background="@color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/ic_close_black_24dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgSelectedImageWork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_center_focus_weak_black_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnAmbilPhoto"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOTO TAMPAK DEPAN"
                android:textStyle="bold"
                android:textColor="@color/DarkSlateBlue"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imgNoData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_center_focus_weak_black_24dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnAmbilPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnLanjut"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_button"
            android:text="AMBIL PHOTO"
            android:textColor="@color/White"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnLanjut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_button"
            android:text="LANJUT"
            android:textColor="@color/White"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</LinearLayout>