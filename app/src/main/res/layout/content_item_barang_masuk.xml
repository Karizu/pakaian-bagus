<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutListBarangMasuk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_list_inventaris"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_ripple"
        android:weightSum="4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAticleBM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="@string/article_barang"
            android:textSize="13sp"
            android:textColor="@color/NormalColorText"/>

        <TextView
            android:id="@+id/tvQtyBM"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:text="@string/_1_pcs"
            android:textSize="11sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/checkBoxBM"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/unchecked"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>